{
  "extends": "eslint-config-airbnb-base",
  "parser": "babel-eslint",
  "rules": {
    "generator-star-spacing": 0,
    "semi": [2, "never"],
    "comma-dangle": [2, "always-multiline"],
    "indent": [2, 2, {
      "SwitchCase": 1
    }],
    "no-alert": 0,
    "no-console": 0,
    "no-undef": 1,
    "id-length": 0,
    "no-param-reassign": [2, {
      "props": false
    }],
    "new-cap": [2, {
      "capIsNewExceptions": ["express.Router"]
    }],
    "eqeqeq": [2, "smart"],
    "max-len": 0,
  },
  "env": {
    "node": true
  },
  "globals": {
    "app": true,

    "appRoot": true,
    "config": true,

    "redis": true,
    "appLogger": true,
    "hopServiceSa": true,

    "moment": true,
  }
}
